<Window x:Class="impanzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- 3열: 왼쪽 박스, 원 2개, 오른쪽 박스 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- 왼쪽 박스 -->
            <ColumnDefinition Width="*"/>
            <!-- 원 2개 -->
            <ColumnDefinition Width="Auto"/>
            <!-- 오른쪽 박스 -->
        </Grid.ColumnDefinitions>

        <!-- 왼쪽 작은 박스 2개 Spacing="20" -->
        <StackPanel Grid.Column="0"
                    VerticalAlignment="Center"
                    Margin="10"
                    Orientation="Vertical"
                    >
            <Rectangle Width="80" Height="40"
                       Fill="LightGray"
                       Stroke="Black" Margin="0,24,0,24" StrokeThickness="1"/>
            <Rectangle Width="80" Height="40"
                       Fill="LightGray"
                       Stroke="Black" Margin="0,24,0,24" StrokeThickness="1"/>
            <Rectangle Width="80" Height="40"
                       Fill="LightGray"
                       Stroke="Black" Margin="0,24,0,24"  StrokeThickness="1"/>
            <Rectangle Width="80" Height="40"
                       Fill="LightGray"
                       Stroke="Black" Margin="0,24,0,24" StrokeThickness="1"/>
        </StackPanel>

        <!-- 가운데: 두 개의 원을 균등 배치 -->
        <UniformGrid Grid.Column="1"
                     Rows="1" Columns="2"
                     Margin="10">
            <!-- 왼쪽 원 -->
            <Ellipse Stroke="Black" StrokeThickness="2"
                     Fill="Transparent"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Stretch="Uniform" />
            <!-- 오른쪽 원 -->
            <Ellipse Stroke="Black" StrokeThickness="2"
                     Fill="Transparent"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Stretch="Uniform" />
        </UniformGrid>

        <!-- 오른쪽 작은 박스 2개 Spacing="20" -->
        <StackPanel Grid.Column="2"
                    VerticalAlignment="Center"
                    Margin="10"
                    Orientation="Vertical"
                    >

        </StackPanel>
    </Grid>
</Window>
